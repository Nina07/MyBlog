<h3>User Blogs</h3>
<center><%= link_to 'Go back to my profile', user_path(@current_user) %></center>
<% @blogs.each do |blog| %>
  <div id="blog_body">
    <u><%= blog.title %></u><br>
    <%= strip_tags(blog.body) %><br>
  <u>Comments</u>
  <% blog.comments.each do |comment| %>
  <ul>
    <li>
      <%= comment.data %>
      <%= link_to 'Edit', edit_blog_comment_path(blog.id,comment.id) %>
      <%= link_to 'Delete', blog_comment_path(blog.id,comment.id),           method: :delete , data: { confirm: 'Are you sure?'} %>
    </li>
  </ul>    
  <% end %>
  <%= form_for [blog,@comment], url: blog_comments_path(blog.id) do |f| %>
    <%= f.label :comment %>
    <%= f.text_area :data %>
    <center><%= f.submit 'Post' %></center>
  <% end %>
<% end %>
</div>
