<div class="blog-show">
  <legend>
    <%= @blog.title %>&nbsp&nbsp~ <%= @blog.user.full_name %>
  </legend>
  <p>
    <%= sanitize @blog.body, tags: %w(b i u) %>
  </p>
  <% if current_user && (([current_user.role] & ['Admin', 'Moderator']).any? || @blog.blog_owner?(current_user)) %>
    <%= link_to 'Edit Blog', edit_blog_path(@blog) %><br><br>
  <% end %>
  <%= link_to 'Comments' ,"#", id: "comments-link" %><br>

  <section id="comments-section">
    <div id="blog-comments">
      <%= render 'blog_comments'  %>
    </div>
    <%= render '/comments/form' %>
  </section>
</div>

