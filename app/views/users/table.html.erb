<table border=1>
  <tr>
    <th>User Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
      <td><%= user.f_name + '' + user.l_name  %></td>
      <td><%= user.address %></td>
      <td><%= user.email %></td>
      <td><%= user.phone %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user), method: :delete %></td>
  <% end %>
  </tr>
</table>
<form method="POST">
  <textarea name="editor_content" id="myEditor"></textarea><br>
  <button>Submit</button>
</form>
