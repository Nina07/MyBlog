<div id="profile">
  <h3><%= @user.f_name.capitalize %>'s Profile</h3>
</div>
<div class="user_profile">
  <div class="well">
    Name: <%= @user.full_name %>
    <br>
    Role: <%= @user.role %>
    <br>
    Address: <%= @user.address %>
    <br>
    Email ID: <%= @user.email %>
    <br>
    Phone Num: <%= @user.phone %>
    <br>
    About <%= @user.f_name + ' : ' + @user.about_user %>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= link_to 'Edit Profile', edit_user_path(@user) %>
      <%= link_to 'Delete Account', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete your account ?' } %>
      </div>
  </div>
</div>

<%= render 'user_blogs' %>

