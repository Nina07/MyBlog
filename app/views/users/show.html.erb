<h3><u><%= @user.f_name.capitalize %>'s Profile</u></h3>
<div class="user_profile">
  <p>
    Name: <%= @user.f_name + ' ' + @user.l_name %>
  </p>
  <p>
    Address: <%= @user.address %>
  </p>
  <p>
    Email ID: <%= @user.email %>
  </p>
  <p>
    Phone Num: <%= @user.phone %>
  </p>
  <p>
    About <%= @user.f_name.capitalize + ' : ' + @user.about_user %>
  </p>
  <p>
    <%= link_to 'Edit Profile', edit_user_path(@user) %>
  </p>
  <p>
    <%= link_to 'Delete Account', user_path(@user), method: :delete, data: {
      confirm: 'Are you sure you want to delete your account ?'} %>
  </p>
</div>

<h3><u><%= @user.f_name %>'s Blogs</h3></u>
<% if @blogs.present? %>
  <% @blogs.each do |blog| %>
    <p><%= link_to "#{blog.title}", blog_path(blog.id) %><br>
       <%= link_to 'Edit Blog', edit_blog_path(blog.id) %>
       <%= link_to 'Destroy Blog', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?'} %>
    </p>
  <% end %>
<% else %>
  <p>You do not have any Blog yet. Quick, make one !</p>
<% end %>
<center>
  <%= link_to 'Add new Blog!', new_blog_path %><br>
  <%= link_to 'Logout', root_path %>
</center>
