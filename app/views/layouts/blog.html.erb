<!DOCTYPE html>
<html>
  <head>
  <title>User Blogs</title>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'bootstrap_and_overrides', media: 'all', 'data-turbolinks-track' => true %>
    <meta charset="utf-8">
    <!-- Include Font Awesome. -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Include Editor style. -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/froala_editor.min.css" rel="stylesheet" type="text/css" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/froala_style.min.css" rel="stylesheet" type="text/css" />
  </head>

  <body>
   <nav class="navbar navbar-default">
    <div class="container">
      <ul class="nav navbar-nav">
      <% if session[:user_id] %>
        <li><%= link_to 'My Profile' , user_path(current_user) %></li>
      <% end %>
        <li class="active"><%= link_to 'UserBlogs', blogs_path %></li>
        <li><%= link_to 'About Us', about_us_blogs_path %></li>
      </ul><br><br><br>
    <%= yield %>
    </nav>
  </body>
</html>
<script>
  $(function() {
    $('#myEditor').froalaEditor({toolbarInline: false})
  });
</script>


