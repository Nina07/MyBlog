<!DOCTYPE>
<html>
<head>
<title>My Profile</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap_and_overrides', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <ul class="nav navbar-nav">
      <% if current_user %>
        <li class="active"><%= link_to 'My Profile', user_path(@user.id)%></li>
      <% end %>
        <li><%= link_to 'User Blogs', blogs_path %></li>
        <li><%= link_to 'About Us', about_us_blogs_path %></li>
        <br>
        <%= yield %>
      </ul>
    </div>
  </nav>
</body>
</html>
